{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "allowJs": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "packages/*/src"
      ],
    }
  },
  "include": [
    "src",
    "typings.d.ts"
  ],
  "references": [
    {
      "path": "../micro-lib"
    }
  ],
  "exclude": [
    "node_modules",
    "build",
    "public"
  ]
}